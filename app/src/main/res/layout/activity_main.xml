<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="50dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.jetlee.simpleedittext.SimpleEditText
            android:id="@+id/edit_query"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/app_name"
            app:deadlineColor="#FFEB3B"
            app:errorColor="#8E24AA"
            app:hasTopHint="true"
            app:hintColor="#1976D2"
            app:leftIcon="@drawable/ic_phone_green_500_24dp"
            app:lengthColor="#F50057"
            app:maxLength="20"
            app:rightClear="@drawable/ic_highlight_off_grey_700_24dp" />

    </LinearLayout>

</LinearLayout>
